<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/aboutbutton"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="@string/about"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mapbutton" />

    <Button
        android:id="@+id/mapbutton"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="@string/map"
        app:layout_constraintEnd_toEndOf="@+id/greetingsign"
        app:layout_constraintTop_toBottomOf="@+id/calllistbutton" />

    <TextView
        android:id="@+id/greetingsign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="200dp"
        android:text="@string/what_would_you_like_to_do"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/dialbutton"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="@string/dial"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/calllistbutton"
        app:layout_constraintStart_toStartOf="@+id/greetingsign"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.382" />

    <Button
        android:id="@+id/calllistbutton"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="@string/call_list"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/greetingsign"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.382" />

    <Button
        android:id="@+id/settingsbutton"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="@string/settings"
        app:layout_constraintEnd_toStartOf="@+id/mapbutton"
        app:layout_constraintStart_toStartOf="@+id/greetingsign"
        app:layout_constraintTop_toBottomOf="@+id/dialbutton" />

</androidx.constraintlayout.widget.ConstraintLayout>